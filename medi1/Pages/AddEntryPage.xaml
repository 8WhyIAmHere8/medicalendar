<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="medi1.Pages.AddEntryPage"
             Title="Add Condition">
  <StackLayout Padding="20" Spacing="15">
    <!-- Ask user for condition name -->
    <Label Text="Name of the Entry:" />
    <Entry x:Name="NameEntry" Placeholder="Enter name" />

    <!-- Ask user for condition description -->
    <Label Text="Description:" />
    <Editor x:Name="DescriptionEditor"
            Placeholder="Enter description"
            AutoSize="TextChanges"
            HeightRequest="100"/>
    
    <!-- Button -->
    <Button Text="Add Condition" Clicked="OnAddConditionClicked"/>
  </StackLayout>
</ContentPage>
