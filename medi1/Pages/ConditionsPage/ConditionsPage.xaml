<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="medi1.Pages.ConditionsPage.ConditionsPage"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"

             x:Name="MainPageRef"
             Title="Conditions Tracker">

<!--              xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls" -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="TabButtonStyle" TargetType="Frame">
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="BackgroundColor" Value="#BBDEFB" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
<!--              xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui" -->
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Tabs Header Strip -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <ScrollView Orientation="Horizontal" HeightRequest="50">
                    <HorizontalStackLayout Spacing="10">
                        <CollectionView ItemsSource="{Binding Conditions}"
                                        ItemsLayout="HorizontalList"
                                        SelectionMode="Single"
                                        SelectedItem="{Binding SelectedCondition}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="10,5"
                                           CornerRadius="20"
                                           BackgroundColor="{Binding ., Converter={StaticResource TabHighlightConverter}, ConverterParameter={Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectedCondition}}"
                                           >
                                        <Label Text="{Binding Name}" FontSize="16" />
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Add Tab -->
                        <Frame Style="{StaticResource TabButtonStyle}" BackgroundColor="#BBDEFB">
                            <Label Text="＋" FontSize="20">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AddConditionCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Frame>
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Archived Conditions Button -->
                <Button Text="Archived Conditions"
                        BackgroundColor="#69F0AE"
                        TextColor="Black"
                        CornerRadius="20"
                        Margin="10,0"
                        VerticalOptions="Center"
                        Command="{Binding OpenArchivedConditionsCommand}" />
            </HorizontalStackLayout>

            <!-- Main Content Split View -->
            <Grid ColumnDefinitions="*,2*" RowDefinitions="Auto">

                <!-- Left Panel -->
                <VerticalStackLayout Grid.Column="0" Spacing="15">

                    <!-- Medications -->
                    <Frame BackgroundColor="#E3F2FD" CornerRadius="20" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="Medications" FontSize="20" FontAttributes="Bold" TextColor="#1A237E" />
                            <CollectionView ItemsSource="{Binding SelectedCondition.Medications}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Label Text="{Binding}" FontSize="16" />
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Entry Placeholder="Enter medication" Text="{Binding NewMedication}" />
                            <Button Text="＋" Command="{Binding AddMedicationCommand}" HorizontalOptions="Start" WidthRequest="40" />
                        </VerticalStackLayout>
                    </Frame>
                    <!-- Treatments -->
                    <Frame BackgroundColor="#E3F2FD" CornerRadius="20" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="Treatments" FontSize="20" FontAttributes="Bold" TextColor="#1A237E" />
                            <CollectionView ItemsSource="{Binding SelectedCondition.Treatments}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Label Text="{Binding}" FontSize="16" />
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Entry Placeholder="Enter treatment" Text="{Binding NewTreatment}" />
                            <Button Text="＋" Command="{Binding AddTreatmentCommand}" HorizontalOptions="Start" WidthRequest="40" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Symptoms -->
                    <Frame BackgroundColor="#E3F2FD" CornerRadius="20" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="Symptoms" FontSize="20" FontAttributes="Bold" TextColor="#1A237E" />
                            <CollectionView ItemsSource="{Binding SelectedCondition.Symptoms}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Label Text="{Binding}" FontSize="16" />
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Entry Placeholder="Enter symptoms" Text="{Binding NewSymptom}" />
                            <Button Text="＋" Command="{Binding AddSymptomCommand}" HorizontalOptions="Start" WidthRequest="40" />
                        </VerticalStackLayout>
                    </Frame>
                    <!-- Triggesrs -->
                    <Frame BackgroundColor="#E3F2FD" CornerRadius="20" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="Triggers" FontSize="20" FontAttributes="Bold" TextColor="#1A237E" />
                            <CollectionView ItemsSource="{Binding SelectedCondition.Triggers}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Label Text="{Binding}" FontSize="16" />
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Entry Placeholder="Enter triggers" Text="{Binding NewTrigger}" />
                            <Button Text="＋" Command="{Binding AddTriggerCommand}" HorizontalOptions="Start" WidthRequest="40" />
                        </VerticalStackLayout>
                    </Frame>
                  

                    <!-- Notes -->
                    <Frame BackgroundColor="#E3F2FD" CornerRadius="20" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="My Notes" FontSize="20" FontAttributes="Bold" TextColor="#1A237E" />
                            <Editor Text="{Binding SelectedCondition.Notes}" HeightRequest="80" />
                            <Button Text="＋" Command="{Binding SaveNoteCommand}" HorizontalOptions="Start" WidthRequest="40" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Right Panel - Recent Events -->
                <Frame Grid.Column="1" BackgroundColor="#E3F7FE" CornerRadius="20" Padding="10" Margin="10,0">
                    <VerticalStackLayout>
                        <Label Text="Recent events" FontSize="20" FontAttributes="Bold" TextColor="Black" />
                        <CollectionView ItemsSource="{Binding RecentHealthEvents}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="White" CornerRadius="10" Padding="10" Margin="5">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Title}" FontSize="16" FontAttributes="Bold" />
                                            <Label Text="{Binding StartDate, StringFormat='Start Date: {0:MM/dd/yyyy}'}" FontSize="14" />
                                            <Label Text="{Binding Length, StringFormat='Length: {0} days'}" FontSize="14" />
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Frame>
                            <StackLayout>
                                <Button Text="+ Log an Entry" Clicked="AddNewEntry" />
                            </StackLayout>
                        </Frame>
                         <VerticalStackLayout Spacing="10">

    <!-- Existing chart view -->
    <skia:SKCanvasView x:Name="ChartCanvas"
                       HeightRequest="300"
                       PaintSurface="OnCanvasViewPaintSurface" />

    <!-- Zoom controls -->
    <HorizontalStackLayout HorizontalOptions="Center">
        <Button Text="➖ Zoom Out"
                Clicked="OnZoomOutClicked"
                BackgroundColor="#ddd" />
        <Button Text="➕ Zoom In"
                Clicked="OnZoomInClicked"
                BackgroundColor="#ddd" />
                 <DatePicker Date="{Binding StartDate}" />
    <Label Text="to" VerticalOptions="Center" />
    <DatePicker Date="{Binding EndDate}" />
    </HorizontalStackLayout>

</VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>
              
            </Grid>

            <!-- Archive Button -->
            <Button Text="Archive this condition"
                    BackgroundColor="#E0E0E0"
                    TextColor="Black"
                    HorizontalOptions="End"
                    Margin="0,20"
                    Command="{Binding ArchiveConditionCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
